.header + .page-content {
  padding-top: 44px;
}

header {
  height: 44px;
  width: 100%;
}

.footer {
  /* position: fixed; */
  /* left: 0; */
  /* bottom: 0; */
  width: 100%;
  min-height: 44px;
  /* height: 44px;  */
}

.footer.open{
  height: 100px;
  padding: 0 8px;
  display: flex;
}

.footer__inner {
  padding: 0 8px;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;  
}

.footer__item{
  width: 100%;
  height: 100%;
  text-align: center;
}

.footer__item icon{
  line-height: 44px;
}


.footer__popup{
  margin-bottom: 10px;
  transition: all .2s ease-in;
  height: 0px;
  display: none;
}

