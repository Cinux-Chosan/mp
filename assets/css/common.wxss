.header + .page-content {
  padding-top: 44px;
}

header {
  height: 44px;
  width: 100%;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 44px;
}

.footer__inner {
  padding: 0 8px;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer__item{
  width: 100%;
  height: 100%;
  text-align: center;
}

.footer__item icon{
  line-height: 44px;
}
